{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"strictNullChecks": true,
		"declaration": true,
		"inlineSourceMap": true,
		"noEmit": true,
		"esModuleInterop": true,
		"isolatedDeclarations": true,
		"skipLibCheck": true,
		"plugins": [
			{
				"transform": "typia/lib/transform"
			}
		]
	},
	"include": [
		"src",
		"tests",
		"eslint.config.js",
		"build.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
