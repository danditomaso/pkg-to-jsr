{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"strictNullChecks": true,
		"declaration": true,
		"inlineSourceMap": true,
		"noEmit": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"erasableSyntaxOnly": true
	},
	"include": [
		"src",
		"tests",
		"eslint.config.js",
		"tests"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
